@model ControlFinWeb.App.ViewModels.PessoaVM
@using ControlFinWeb.Dominio.ObjetoValor;

@{
    ViewData["Title"] = "Pessoas";
}

<div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title"></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="javascript:window.location.reload()"></button>
        </div>
        <div class="modal-body">
            <form asp-action="Editar" id="FrmPessoa">
                <fieldset id="fsAgrupar">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="row">
                        <div class="col-md-8">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Situacao" class="control-label"></label>
                            <select class="form-select" asp-for="Situacao" asp-items="Html.GetEnumSelectList<Situacao>()"></select>
                            <span asp-validation-for="Situacao" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="card">
                        <div class="card-header">Suas Rendas</div>
                        <div class="card-body">

                            <div class="row">
                                <div class="col-md-6">
                                    <label asp-for="TipoRendaId" class="control-label"></label>
                                    <select class="form-select" asp-for="TipoRendaId" asp-items="@Model.Rendas">
                                        <option value="0">---Selecione---</option>
                                    </select>
                                    <span asp-validation-for="TipoRendaId" class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="RendaBruta" class="control-label"></label>
                                    <input asp-for="RendaBruta" class="form-control" style="text-align:right" />
                                    <span asp-validation-for="RendaBruta" class="text-danger"></span>
                                </div>
                                <div class="col-md-3">
                                    <label asp-for="RendaLiquida" class="control-label"></label>
                                    <input asp-for="RendaLiquida" class="form-control" style="text-align:right" />
                                    <span asp-validation-for="RendaLiquida" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="row">
                                <textarea asp-for="JsonRendas" id="txtJsonRendas" class="form-control" rows="1" style="display:none;"></textarea>
                            </div>
                            <br />
                            <table class="table table-bordered table-striped table-hover" id="rendas">
                                <thead>
                                    <tr>
                                        <th>Renda</th>
                                        <th style="text-align:right" class="rBruta">R.Bruta</th>
                                        <th style="text-align:right">R.Líquida</th>
                                        <th style="text-align:center"><button type="button" class="btn btn-sm btn-dark" onclick="AddRenda()"><i class="badge-info bi-plus-lg"></i></button></th>
                                    </tr>
                                </thead>
                                <tbody id="tbodyRendas">
                                </tbody>
                                <tfoot id="tfootRendas">
                                </tfoot>
                            </table>
                        </div>
                    </div>
                    <br />
                    <button type="button" onclick="Salvar()" class="w-100 btn btn-success">Salvar</button>

                </fieldset>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        var Items = new Object();
        Items.Rendas = new Array();
        var tbodyRendas = document.getElementById("tbodyRendas");

        function FixaDuasCasasDecimais(num) {
            return parseFloat(Math.round(num * 100) / 100).toFixed(2);
        }

        $(function() {
            $("#RendaBruta, #RendaLiquida").maskMoney({ thousands: '', decimal: ',', allowZero: true });

            $(document).ready(function() {
                var id = parseInt($("#Id").val());
                var jsonRendas = $("#txtJsonRendas").val().toString();
                var sit = parseInt($("#Situacao").val());

                if (id > 0 && jsonRendas != "") {
                    var k = 0;
                    Items.Rendas = JSON.parse(jsonRendas);
                    PreencherTable();
                }

                //0 = Ativo | 1 = Inativo
                if (sit == 1) {
                    $('#fsAgrupar').prop('disabled', true);
                }
            });

            $(document).on('click', '.RemoverRenda button', function(event) {
                var index = $(this).closest('tr').index();
                var remove = Items.Rendas.splice(parseInt(index), 1);
                delete remove;

                document.getElementById("txtJsonRendas").value = JSON.stringify(Items.Rendas);

                // AQUI PRECISO REMOVER OS DADOS DO TBODY
                $('#tbodyRendas').empty();
                PreencherTable();
            });
        });

        function AddRenda() {
            var rendaId = $("#TipoRendaId").val();
            var nomeRenda = $('#TipoRendaId').find(":selected").text();
            var rendaBruta = $("#RendaBruta").val().replace(",", ".");
            var rendaLiquida = $("#RendaLiquida").val().replace(",", ".");
            if (rendaId <= 0) {
                $("[data-valmsg-for=TipoRendaId]").html('Selecione uma Renda');
                return;
            }
            if (parseFloat(rendaBruta) <= 0.00) {
                $("[data-valmsg-for=RendaBruta]").html('Valor precisa ser maior que zero!');
                return;
            }

            if (parseFloat(rendaLiquida) <= 0.00) {
                rendaLiquida = rendaBruta;
            }

            Items.Rendas.push({
                "Id": 0,
                "RendaBruta": rendaBruta,
                "RendaLiquida": rendaLiquida,
                "TipoRendaId": rendaId,
                "TipoRendaVM": {
                    "Id": rendaId,
                    "Nome": nomeRenda
                }
            });

            document.getElementById("txtJsonRendas").value = JSON.stringify(Items.Rendas);

            $('#tbodyRendas').empty();
            PreencherTable();

            $("#TipoRendaId").val(0);
            $("#RendaBruta").val('0,00');
            $("#RendaLiquida").val('0,00');

            $("[data-valmsg-for=TipoRendaId]").html('');
            $("[data-valmsg-for=RendaBruta]").html('');
            $("[data-valmsg-for=RendaLiquida]").html('');
        }

        function Salvar() {
            var dados = $("#FrmPessoa").serialize();
            $.ajax({
                url: '/Pessoas/Editar',
                method: 'POST',
                data: dados,
                success: function(retorno) {
                    if (retorno == "") {
                        location.reload();
                    }
                    else
                        $("#modal").html(retorno);
                }
            });
        }

        function PreencherTable() {
            var totalRendaBruta = 0;
            var totalRendaLiquida = 0;
            
            $.each(Items.Rendas, function(i, item) {
                var linha = "<tr id='" + item.Id + "'>" +
                    "<td>" + item.TipoRendaVM.Nome + "</td>" +
                    "<td align='right'>" + FixaDuasCasasDecimais(item.RendaBruta).replace(".", ",") + "</td>" +
                    "<td align='right'>" + FixaDuasCasasDecimais(item.RendaLiquida).replace(".", ",") + "</td>" +
                    "<td align='right'><div class='RemoverRenda'><button type='button' class='btn btn-danger btn-sm'><i class='bi bi-dash'></i></button></div></td>" +
                    "</tr>";
                tbodyRendas.innerHTML += linha;

                totalRendaBruta += parseFloat(item.RendaBruta);
                totalRendaLiquida += parseFloat(item.RendaLiquida);

            });

            $('#tfootRendas').empty();
            var rodape = "<tr style='font-weight: bold;'>" +
                "<td>Totais</td>" +
                "<td align='right'>" + FixaDuasCasasDecimais(totalRendaBruta).replace(".", ",") + "</td>" +
                "<td align='right'>" + FixaDuasCasasDecimais(totalRendaLiquida).replace(".", ",") + "</td>" +
                "</tr>";
            tfootRendas.innerHTML += rodape;
        }

    </script>
}

