@model ControlFinWeb.App.ViewModels.PessoaVM
@using ControlFinWeb.Dominio.ObjetoValor;

@{
    ViewData["Title"] = "Pessoas";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title"></h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="javascript:window.location.reload()"></button>
        </div>
        <div class="modal-body">
            <form>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" type="hidden" />
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Situacao" class="control-label"></label>
                    <select class="form-select" asp-for="Situacao" asp-items="Html.GetEnumSelectList<Situacao>()"></select>
                    <span asp-validation-for="Situacao" class="text-danger"></span>
                </div>
                <br />
                <div class="card">
                    <div class="card-header">Suas rendas</div>
                    <div class="card-body">
                        <div class="row-cols-md-5">
                            <label asp-for="TipoRendaId" class="control-label"></label>
                            <select class="form-select" asp-for="TipoRendaId" asp-items="ViewBag.TipoRendaId">
                                <option value="0">---Selecione---</option>
                            </select>
                            <span asp-validation-for="TipoRendaId" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-5">
                                <label asp-for="RendaBruta" class="control-label"></label>
                                <input asp-for="RendaBruta" class="form-control"/>
                                <span asp-validation-for="RendaBruta" class="text-danger"></span>
                            </div>
                            <div class="col-5">
                                <label asp-for="RendaLiquida" class="control-label"></label>
                                <input asp-for="RendaLiquida" class="form-control" />
                                <span asp-validation-for="RendaLiquida" class="text-danger"></span>
                            </div>
                            <div class="col-2">
                                <br />
                                <button class="btn btn-dark addRenda" onclick="alert=" teste"><i class="badge-info bi-plus-lg"></i></button>
                            </div>
                        </div>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Dados</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.PessoaRendasVM)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PessoaVM.PessoaRendasVM)
                                        </td>

                                        <td align="right">
                                            <button class="btn btn-primary modal-trigger editar" data-id="@item.Id"><i class="bi bi-pencil-square"></i></button>
                                            <a class="btn btn-danger modal-trigger" onclick="ExibirModalExcluir(@item.Id)"><i class="bi bi-x-square"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <br />
            </form>

            <br />
            <button type="button" class="w-100 btn btn-success">Salvar</button>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script type="text/javascript">
    $(function () {
        $("#RendaBruta, #RendaLiquida").maskMoney({ thousands: '.', decimal: ',', allowZero: true });
    });
</script>
}

