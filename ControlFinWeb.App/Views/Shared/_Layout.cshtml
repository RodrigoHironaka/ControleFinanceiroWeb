<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Controle Financeiro</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Financeiro</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Cadastros
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" asp-action="Index" asp-controller="FormasPagamento">Formas de Pagamento</a>
                                    <a class="dropdown-item" href="#">Tipo de Renda</a>
                                    <a class="dropdown-item" href="#">Pessoa</a>
                                    <a class="dropdown-item" href="#">Gastos</a>
                                    <a class="dropdown-item" href="#">SubGastos</a>
                                    <a class="dropdown-item" href="#">Banco</a>
                                    <a class="dropdown-item" href="#">Hora Extra</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Cartões</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Contas</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Caixa</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Conta Banco</a>
                            </li>
                        </ul>
                    </div>
                    <div class="d-flex dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownUsuario" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            @ControlFinWeb.App.Utilitarios.Configuracao.Usuario.Nome
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownUsuario">
                            <li><a class="dropdown-item" asp-action="Sair" asp-controller="Login">Sair</a></li>
                        </ul>
                    </div>

                </div>
            </nav>
        </header>
    }
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
