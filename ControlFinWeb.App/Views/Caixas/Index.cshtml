@using ControlFinWeb.Dominio.ObjetoValor
@model ControlFinWeb.App.ViewModels.CaixaVM

@{
    ViewData["Title"] = "Caixa";
}


<div class="row mb-3">
    <div class="col-sm-4 d-flex justify-content-start">
        <button type="button" class="w-100 btn-md btn btn-dark pesquisar"><i class="bi bi-search"></i> Pesquisar</button>
        @if (Model.Situacao == SituacaoCaixa.Aberto)
        {
            <button type="button" class="w-100 btn-md btn btn-secondary abrirFecharCaixa" data-id="@Model.Id"><i class="bi bi-cash-stack"></i> Abrir Caixa</button>
        }
        @if (Model.Id > 0 && Model.Situacao == SituacaoCaixa.Aberto)
        {
            <button type="button" class="w-100 btn btn-md btn-dark novo" data-id="0"><i class="bi bi-plus-lg"></i> Adicionar</button>
        }
        
        <button type="button" class="w-100 btn btn-md btn-secondary transferirBanco" data-id="0"><i class="bi bi-bank2"></i> Transferir</button>
        
    </div>
    <div class="col-md-8">
        @if (Model.Id > 0)
        {
            <h2>@Model.DescricaoCaixa</h2>
        }
    </div>
</div>
<hr />

<div id="mensagem" role="alert"></div>

<table id="tabela" class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th style="text-align:center">Tipo</th>
            <th style="text-align:center">Data</th>
            <th style="text-align:right">Valor</th>
            <th>Forma de Pagamento</th>
            <th>Descrição</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.FluxosCaixaVM != null)
        {
            @foreach (var item in Model.FluxosCaixaVM)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DebitoCredito)
                    </td>
                    <td>
                        @Html.Raw(item.Data.ToString())
                    </td>
                    <td style="text-align:right">
                        @if(item.DebitoCredito == DebitoCredito.Crédito)
                        {
                            @Html.DisplayFor(modelItem => item.Valor)
                        }
                        else
                        {
                            var neg = item.Valor * -1;
                            @Html.DisplayFor(modelItem => neg)
                            
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FormaPagamentoVM.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                </tr>
            }
        }
    </tbody>
    <tfoot>
        <tr style="text-align:right">
            <th></th>
            <th colspan="1">Total:</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </tfoot>
</table>

<div id="modal" class="modal fade" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false"></div>

<!--Modal Excluir-->
<div class="modal fade modal-excluir" id="modal-excluir" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title text-white">Confirma exclusão do registro?</h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-outline-danger btnConfirmar">Confirmar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $(document).ready(function () {
            $(".modal-excluir").modal();

            if (@Model.Id > 0) {
                $(".abrirFecharCaixa").addClass('small').addClass('bi bi-cash-stack').text(" Fechar Caixa");
            }

            if (parseInt(@Model.Situacao.GetHashCode()) == parseInt(@SituacaoCaixa.Fechado.GetHashCode())) {
                $("#botoes *").prop('disabled', true);
            }

            $('#tabela').DataTable({
                order: [[1, 'desc']],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/pt-BR.json"
                },
                paging: false,
                info: false,
                responsive: true,
                footerCallback: function (row, data, start, end, display) {
                    var numFormat = $.fn.dataTable.render.number('\.', ',', 2).display;
                    var api = this.api();
                    // Total por pagina
                    pageTotal = api
                        .column(2, { page: 'current' })
                        .data()
                        .reduce(function (a, b) {
                            return parseFloat(a.toString().replace(",", ".")) + parseFloat(b.toString().replace(",", "."));
                        }, 0);
                    // Update footer
                    $(api.column(2).footer()).html(numFormat(pageTotal));
                },
            });
        });

        function ExibirModalExcluir(id) {
            $("#modal-excluir").modal("show");
            $(".btnConfirmar").on("click", function () {
                $.ajax({
                    method: "POST",
                    url: "Deletar",
                    data: { id: id },
                    success: function () {
                        location.reload();
                    },
                    error: function () {
                        $("#modal-excluir").modal("hide");
                        $("#mensagem").addClass('alert alert-danger').html("<strong>Erro!</strong> Não é possível excluir, por favor inative o registro!").delay(10000).fadeOut(400);
                    }
                });
            })
        }

        $(function () {
            $(".abrirFecharCaixa").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("Editar?id=" + id, function () {
                    if (id > 0) {
                        $(".modal-title").html("FECHAR CAIXA");
                        $("#ValorAberturaFechamento").prop('readonly', true);
                    } else {
                        $(".modal-title").html("ABRIR CAIXA");
                    }
                    $("#modal").modal("show");
                })
            });

            $(".pesquisar").click(function () {
                $("#modal").load("Pesquisa", function () {
                    $(".modal-title").html("PESQUISA DE CAIXAS");
                    $("#modal").modal("show");
                })
            });

            $(".novo").click(function () {
                var id = $(this).attr("data-id");
                var idCaixa = @Model.Id;
                $("#modal").load("/FluxoCaixas/Editar?id=" + id, function () {
                    $(".modal-title").html("NOVO REGISTRO");
                    $("#CaixaId").val(idCaixa);
                    $("#modal").modal("show");
                })
            });
            $(".transferirBanco").click(function () {
                var id = $(this).attr("data-id");
                var idCaixa = @Model.Id;
                var valor = parseFloat(@Model.BalancoFinal.ToString().Replace(",","."));
               
                if (valor > 0) {
                    $("#modal").load("/ContasBancarias/Editar?valorTransferencia=" + valor, function () {
                        $(".modal-title").html("NOVO REGISTRO");
                        $("#CaixaId").val(idCaixa);
                        $("#modal").modal("show");
                    });
                }else{
                    $("#mensagem").addClass('alert alert-warning').html("<strong>Erro!</strong> Balanço Final é negativo! Não é possível transferir.").delay(10000).fadeOut(400);
                }

            });

        })
    </script>
}