            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="javascript:window.location.reload()"></button>
        </div>
        <div class="modal-body">
            <form asp-action="Editar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" type="hidden" />
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gasto" class="control-label"></label>
                    @*@Html.DropDownListFor(model => model.Id, ((IEnumerable<SubGastoVM>)ViewBag.Instrutores).Select(option => new SelectListItem
{
    Text = option.NomeInstrutor,
    Value = option.InstrutorId.ToString(),
    Selected = (Model != null) && (Model.InstrutorId == option.InstrutorId)
}), "Selecione um Instrutor...", new { @class = "form-control" })*@
                    @*<select class="form-select" asp-for="Gasto" asp-items="@ViewBag.Gasto" name="Gasto.Nome"></select>*@
                    <span asp-validation-for="Gasto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Situacao" class="control-label"></label>
                    <select class="form-select" asp-for="Situacao" asp-items="Html.GetEnumSelectList<Situacao>()"></select>
                    <span asp-validation-for="Situacao" class="text-danger"></span>
                </div>
                <br />
                <button type="submit" class="w-100 btn btn-success btnConfirmar">Salvar</button>
            </form>
        </div>
    </div>
</div>

