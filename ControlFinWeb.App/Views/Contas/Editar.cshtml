                    </div>
                    <br />
                    <button type="button" onclick="Salvar()" class="w-100 btn btn-success btnConfirmar">Salvar</button>
                </fieldset>
            </form>
        </div>
    </div>
</div>

<!--Modal Gerar Parcelas-->
<div class="modal fade modal-gerarParcelas" id="modal-gerarParcelas" tabindex="-1" aria-hidden="true" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="text-black">GERAR PARCELAS</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label asp-for="Valor" class="control-label"></label>
                    <input asp-for="Valor" class="form-control" style="text-align:right" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Qtd" class="control-label"></label>
                    <input asp-for="Qtd" class="form-control" type="number" style="text-align:right" />
                    <span asp-validation-for="Qtd" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrimeiroVencimento" class="control-label"></label>
                    <input asp-for="PrimeiroVencimento" class="form-control" type="date" style="text-align:right" />
                    <span asp-validation-for="PrimeiroVencimento" class="text-danger"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="w-100 btn btn-outline-success btnConfirmar">Confirmar</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(function() {
            $("#Valor").maskMoney({ thousands: '', decimal: ',', allowZero: true });

        });

        function FixaDuasCasasDecimais(num) {
            return parseFloat(Math.round(num * 100) / 100).toFixed(2);
        }

        function ExibirModalGerarParcelas() {
            $("#modal-gerarParcelas").modal("show");
            $(".btnConfirmar").on("click", function() {
                if (GerarParcela()) {
                    $("#modal-gerarParcelas").modal("hide");
                }
            });
        }

        var Items = new Object();
        Items.Parcelas = new Array();
        var tbodyParcelas = document.getElementById("tbodyParcelas");
        var tfootParcelas = document.getElementById("tfootParcelas");

        function GerarParcela() {
            var valorTotal = parseFloat($("#Valor").val().replace(",", "."));
            var qtd = parseInt($("#Qtd").val());
            var primeiroVencimento = $("#PrimeiroVencimento").val();

            var valorParcela = parseFloat(valorTotal / qtd).toFixed(2);
            var diferencaValor = (valorTotal - (valorParcela * qtd)).toFixed(2);
            var convertParcela = valorParcela.toString().replace(".", ",");

            if (valorTotal <= 0) {
                $("[data-valmsg-for=Valor]").html('Campo Obrigatório');
                return false;
            }

            if (qtd <= 0 || qtd.toString() == "") {
                $("[data-valmsg-for=Qtd]").html('Campo Obrigatório');
                return false;
            }

            if (primeiroVencimento == "") {
                $("[data-valmsg-for=PrimeiroVencimento]").html('Campo Obrigatório');
                return false;
            }

            $("[data-valmsg-for=Valor]").html('');
            $("[data-valmsg-for=Qtd]").html('');
            $("[data-valmsg-for=PrimeiroVencimento]").html('');

            for (i = 1; i <= qtd; i++) {
                var venc = new Date(primeiroVencimento + " " + "00:00:00")
                if (i > 1) {
                    venc.setMonth(venc.getMonth() + i - 1);
                }
                var parcela = i + '/' + qtd;
                var valorNovaParcela = 0;

                if (diferencaValor != 0) {
                    valorNovaParcela = parseFloat(parseFloat(valorParcela) + parseFloat(diferencaValor)).toFixed(2);
                    diferencaValor = 0;
                } else {
                    valorNovaParcela = valorParcela;
                }

                Items.Parcelas.push({
                    "Id": 0,
                    "Numero": Items.Parcelas.length + 1,
                    "ParcelaDe": parcela,
                    "ValorParcela": valorNovaParcela,
                    "ValorReajustado": valorNovaParcela,
                    "ValorAberto": valorNovaParcela,
                    "DataVencimento": venc,
                });
            }

            document.getElementById("txtJsonParcelas").value = JSON.stringify(Items.Parcelas);

            $('#tbodyParcelas').empty();
            PreencherTableParcelas();

            $("#Valor").val('0,00');
            $("#Qtd").val('0');
            $("#PrimeiroVencimento").val(null);

            return true;
        }

        function PreencherTableParcelas() {
            var totalValorReajustado = 0;
            var totalValorAberto = 0;
            var totalRegistro = 0;

            $.each(Items.Parcelas, function(i, item) {
                if (item.DataVencimento != null) {
                    var data = new Date(item.DataVencimento);
                    data = data.toLocaleDateString("pt-BR").substring(0, 10);
                } else {
                    var data = "";
                }

                var linha = "<tr>" +
                    "<td scope='row'><input class='form-check-input check' id='check' type='checkbox' onclick='ClickCheckItem()'></td>" +
                    "<td align='right'>" + item.ParcelaDe + "</td>" +
                    "<td align='right'>" + FixaDuasCasasDecimais(item.ValorReajustado).replace(".", ",") + "</td>" +
                    "<td align='right'>" + FixaDuasCasasDecimais(item.ValorAberto).replace(".", ",") + "</td>" +
                    "<td align='right'>" + data + "</td>" +
                    "<td align='center'> <button type='button' class='btn btn-primary btn-sm editarParcela'><i class='bi bi-pencil-square'></i></button></td>" +
                    "</tr>";
                tbodyParcelas.innerHTML += linha;

                totalValorReajustado += parseFloat(item.ValorReajustado);
                totalValorAberto += parseFloat(item.ValorAberto);
                totalRegistro++;

            });

            $('#tfootParcelas').empty();
            var rodape = "<tr style='font-weight: bold;'>" +
                "<td>" + totalRegistro + "</td>" +
                "<td>Totais</td>" +
                "<td align='right'>" + FixaDuasCasasDecimais(totalValorReajustado).replace(".", ",") + "</td>" +
                "<td align='right'>" + FixaDuasCasasDecimais(totalValorAberto).replace(".", ",") + "</td>" +
                "<td></td>" +
                "</tr>";
            tfootParcelas.innerHTML += rodape;
            $('#checkAll').prop('checked', false);
        }

        //CheckAll
        $('#checkAll').change(function() {
            $('.check').prop('checked', this.checked);
        });

        function ClickCheckItem() {
            $('.check').change(function() {
                if ($('.check:checked').length == $('.check').length) {
                    $('#checkAll').prop('checked', true);
                }
                else {
                    $('#checkAll').prop('checked', false);
                }
            });
        }

        //Salvar
        function Salvar() {
            var dados = $("#FrmConta").serialize();
            console.log(dados);
            $.ajax({
                url: '/Contas/Editar',
                method: 'POST',
                data: dados,
                success: function(retorno) {
                    if (retorno == "")
                        location.reload();
                    else {
                        $("#modal").html(retorno);
                        if ($("#id").val() > 0)
                            $(".modal-title").html("ALTERANDO REGISTRO");
                        else
                            $(".modal-title").html("NOVO REGISTRO");
                    }
                }

            });
        }

        //Desabilita inputs se situacao for diferente de Aberto e carrega parcelas
        $(document).ready(function() {
            $(".modal-gerarParcelas").modal();

            var sit = $("#Situacao").val().toString();
            if (sit != "Aberto") {
                $('#fsAgrupar').prop('disabled', true);
            }

            var id = parseInt($("#Id").val());
            var jsonParcelas = $("#txtJsonParcelas").val().toString();
            if (id > 0 && jsonParcelas != "") {
                Items.Parcelas = JSON.parse(jsonParcelas);
                PreencherTableParcelas();
            }
        });

