@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/javascript">
        $(function() {
            $("#Valor, #ValorParcela, #JurosPorcentual, #JurosValor, #DescontoPorcentual, #DescontoValor, #ValorPago ").maskMoney({ thousands: '', decimal: ',', allowZero: true });
        });

        function FixaDuasCasasDecimais(num) {
            return parseFloat(Math.round(num * 100) / 100).toFixed(2);
        }

        function ExibirModalGerarParcelas() {
            $("#modal-gerarParcelas").modal("show");
            $(".btnConfirmar").on("click", function() {
                if (GerarParcela()) {
                    $("#modal-gerarParcelas").modal("hide");
                }
            });
        }

        var Items = new Object();
        Items.Parcelas = new Array();
        var tbodyParcelas = document.getElementById("tbodyParcelas");
        var tfootParcelas = document.getElementById("tfootParcelas");

        function GerarParcela() {
            var valorTotal = parseFloat($("#Valor").val().replace(",", "."));
            var qtd = parseInt($("#Qtd").val());
            var primeiroVencimento = $("#PrimeiroVencimento").val();

            var valorParcela = parseFloat(valorTotal / qtd).toFixed(2);
            var diferencaValor = (valorTotal - (valorParcela * qtd)).toFixed(2);
            var convertParcela = valorParcela.toString().replace(".", ",");

            if (valorTotal <= 0) {
                $("[data-valmsg-for=Valor]").html('Campo Obrigatório');
                return false;
            }

            if (qtd <= 0 || qtd.toString() == "") {
                $("[data-valmsg-for=Qtd]").html('Campo Obrigatório');
                return false;
            }

            if (primeiroVencimento == "") {
                $("[data-valmsg-for=PrimeiroVencimento]").html('Campo Obrigatório');
                return false;
            }

            $("[data-valmsg-for=Valor]").html('');
            $("[data-valmsg-for=Qtd]").html('');
            $("[data-valmsg-for=PrimeiroVencimento]").html('');

            for (i = 1; i <= qtd; i++) {
                var venc = new Date(primeiroVencimento + " " + "00:00:00")
                if (i > 1) {
                    venc.setMonth(venc.getMonth() + i - 1);
                }
                var parcela = i + '/' + qtd;
                var valorNovaParcela = 0;

                if (diferencaValor != 0) {
                    valorNovaParcela = parseFloat(parseFloat(valorParcela) + parseFloat(diferencaValor)).toFixed(2);
                    diferencaValor = 0;
                } else {
                    valorNovaParcela = valorParcela;
                }

                Items.Parcelas.push({
                    "Id": 0,
                    "Numero": Items.Parcelas.length + 1,
                    "ParcelaDe": parcela,
                    "ValorParcela": valorNovaParcela,
                    "DataVencimento": venc,
                    "DataPagamento": null,
                    "JurosPorcentual": 0,
                    "JurosValor": 0,
                    "DescontoPorcentual": 0,
                    "DescontoValor": 0,
                    "ValorReajustado": valorNovaParcela,
                    "ValorPago": 0,
                    "ValorAberto": valorNovaParcela,
                    "Observacao": null,
                    "SituacaoParcela": 0,
                    "FormaPagamentoId": 0,
                    "FormaPagamentoVM": null,
                    "ContaId": 0,
                    "ContaVM": null
                });
            }

            document.getElementById("txtJsonParcelas").value = JSON.stringify(Items.Parcelas);

            $('#tbodyParcelas').empty();
            PreencherTableParcelas();

            $("#Valor").val('0,00');
            $("#Qtd").val('0');
            $("#PrimeiroVencimento").val(null);

            return true;
        }

        function PreencherTableParcelas() {
            var totalValorParcela = 0;
            var totalValorReajustado = 0;
            var totalValorAberto = 0;
            var totalRegistro = 0;

            $.each(Items.Parcelas, function(i, item) {
                if (item.DataVencimento != null) {
                    var data = new Date(item.DataVencimento);
                    data = data.toLocaleDateString("pt-BR").substring(0, 10);
                } else {
                    var data = "";
                }

                var corSituacaoParcela = "";
                if (item.SituacaoParcela == 1) { //PendenteParcial
                    corSituacaoParcela = 'background-color:#b6d0fa;';
                } else if (item.SituacaoParcela == 2) { //Atrasado
                    corSituacaoParcela = 'background-color:#fdc433;';
                } else if (item.SituacaoParcela == 3) { //Pago
                    corSituacaoParcela = 'background-color:#03a113;';
                } else if (item.SituacaoParcela == 4) { //Cancelado
                    corSituacaoParcela = 'background-color:#fa2e2a;';
                }

                var linha = "<tr>" +
                    "<td scope='row'style=" + corSituacaoParcela + "><input class='form-check-input check' id='check' type='checkbox' onclick='ClickCheckItem()'></td>" +
                    "<td align='right' style='display:none'>" + item.Id + "</td>" +
                    "<td align='right'>" + item.ParcelaDe + "</td>" +
                    "<td align='right'>" + FixaDuasCasasDecimais(item.ValorParcela).replace(".", ",") + "</td>" +
                     "<td align='right'>" + FixaDuasCasasDecimais(item.ValorReajustado).replace(".", ",") + "</td>" +
                    "<td align='right'>" + FixaDuasCasasDecimais(item.ValorAberto).replace(".", ",") + "</td>" +
                    "<td align='right'>" + data + "</td>" +
                    "<td align='center'> <button type='button' class='btn btn-primary btn-sm EditarParcela' onclick='EditarParcela(this)'><i class='bi bi-pencil-square'></i></button></td>" +
                    "</tr>";
                tbodyParcelas.innerHTML += linha;

                totalValorParcela += parseFloat(item.ValorParcela);
                totalValorReajustado += parseFloat(item.ValorReajustado);
                totalValorAberto += parseFloat(item.ValorAberto);
                totalRegistro++;

            });

            $('#tfootParcelas').empty();
            var rodape = "<tr style='font-weight: bold;'>" +
                "<td>" + totalRegistro + "</td>" +
                "<td>Totais</td>" +
                "<td align='right'>" + FixaDuasCasasDecimais(totalValorParcela).replace(".", ",") + "</td>" +
                "<td align='right'>" + FixaDuasCasasDecimais(totalValorReajustado).replace(".", ",") + "</td>" +
                "<td align='right'>" + FixaDuasCasasDecimais(totalValorAberto).replace(".", ",") + "</td>" +
                "<td></td>" +
                "</tr>";
            tfootParcelas.innerHTML += rodape;
            $('#checkAll').prop('checked', false);
        }

        //CheckAll
        $('#checkAll').change(function() {
            $('.check').prop('checked', this.checked);
        });

        function ClickCheckItem() {
            $('.check').change(function() {
                if ($('.check:checked').length == $('.check').length) {
                    $('#checkAll').prop('checked', true);
                }
                else {
                    $('#checkAll').prop('checked', false);
                }
            });
        }

        //Salvar
        function Salvar() {
            var dados = $("#FrmConta").serialize();
            $.ajax({
                url: '/Contas/Editar',
                method: 'POST',
                data: dados,
                success: function(retorno) {
                    if (retorno == "")
                        location.reload();
                    else {
                        $("#modal").html(retorno);
                        if ($("#id").val() > 0)
                            $(".modal-title").html("ALTERANDO REGISTRO");
                        else
                            $(".modal-title").html("NOVO REGISTRO");
                    }
                }

            });
        }
        //Editar Parcela
        function EditarParcela(element) {
            //----pega index da linha da tabela pelo click do botao que esta na mesma linha----
            LimpaCamposEditarParcela();
            var parcelaEditar = new Object();
            var index = $(element).closest("tr").index(); //(Jquery) //var index = element.parentNode.parentNode.rowIndex -1;  (Javascript)
            $.each(Items.Parcelas, function(i, value) {
                if (i == index) {
                    parcelaEditar = value;
                    return false;//break do each
                }
            });
            $("#modal-editarParcelas").modal("show");
            //Preenche campos
            var situacao = "";
            if (parcelaEditar.SituacaoParcela == parseInt(0)) {
                situacao = "Pendente";
                $("#fsEditarParcela").prop("disabled", false);
            }
            else if (parcelaEditar.SituacaoParcela == parseInt(1)) {
                situacao = "Pendente Parcial";
                $("#fsEditarParcela").prop("disabled", false);
            }
            else if (parcelaEditar.SituacaoParcela == parseInt(2)) {
                situacao = "Atrasado";
                $("#fsEditarParcela").prop("disabled", false);
            }
            else if (parcelaEditar.SituacaoParcela == parseInt(3)) {
                situacao = "Pago";
                $("#fsEditarParcela").prop("disabled", true);
            }
            else {
                situacao = "Cancelado";
                $('#fsEditarParcela').prop('disabled', true);
            }

            $("#Numero").val(parcelaEditar.Numero);
            $("#ParcelaDe").val(parcelaEditar.ParcelaDe);
            $("#SituacaoParcela").val(situacao);
            $("#ValorParcela").val(FixaDuasCasasDecimais(parcelaEditar.ValorParcela).replace(".", ","));
            $("#ValorReajustado").val(FixaDuasCasasDecimais(parcelaEditar.ValorReajustado).replace(".", ","));
            $("#ValorAberto").val(FixaDuasCasasDecimais(parcelaEditar.ValorAberto).replace(".", ","));
