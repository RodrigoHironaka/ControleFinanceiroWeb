        function RemoverParcelas() {
            var checkAll = document.getElementById("checkAll");
            if (checkAll.checked) {
                Items.Parcelas = [];
            } else {
                var trs = $("input:checked").closest("tr"); //pega no tr os elementos que estão checados
                var indexes = $.map(trs, function(tr) { return $(tr).index(); }); //faça um array contendo os índices desses elementos tr

                //verificando se todas as parcelas selecionadas sao pendentes
                for (var i = 0; i < indexes.length; i++) {
                    if (Items.Parcelas[indexes[i]].SituacaoParcela > 0) {
                        $("#alertParcelas").addClass("alert alert-danger").css('display', 'block').html('Por favor selecione apenas parcelas pendentes para excluir!');
                        return false;
                    }
                }
                //se todoas as parcelas passarem na verificacao acima, elas serem removidas
                for (var i = 0; i < indexes.length; i++) {
                    $("#alertParcelas").css('display', 'none');
                    if (i > 0) {
                        var remove = Items.Parcelas.splice(parseInt(indexes[i] - i), 1);
                    } else {
                        var remove = Items.Parcelas.splice(parseInt(indexes[i]), 1);
                    }
                    delete remove;
                }
            }

            document.getElementById("txtJsonParcelas").value = JSON.stringify(Items.Parcelas);
            $('#tbodyParcelas').empty();
            PreencherTableParcelas();
        }

        function AtualizarValorReajustadoEAberto() {
            var valorParcela = parseFloat($("#ValorParcela").val().replace(",", "."));
            var jurosValor = parseFloat($("#JurosValor").val().replace(",", "."));
            var descontoValor = parseFloat($("#DescontoValor").val().replace(",", "."));
            var valorPago = parseFloat($("#ValorPago").val().replace(",", "."));

            var valorReajustado = (valorParcela + jurosValor) - descontoValor;
            var valorAberto = ((valorParcela + jurosValor) - descontoValor) - valorPago;
            
            $("#ValorReajustado").val(FixaDuasCasasDecimais(valorReajustado).replace(".", ","));
            $("#ValorAberto").val(FixaDuasCasasDecimais(valorAberto).replace(".", ","));
            $("#JurosPorcentual").val(FixaDuasCasasDecimais(ValorParaPorcentagem(jurosValor)).replace(".", ","));
            $("#DescontoPorcentual").val(FixaDuasCasasDecimais(ValorParaPorcentagem(descontoValor)).replace(".", ","));
        }

        //Calculando Valor de Porcentagem e vice versa
        function JurosPorcentagemParaValor(valorPorcentagem) {
            $("#JurosValor").val(FixaDuasCasasDecimais(PorcentagemParaValor(valorPorcentagem)).replace(".", ","));
        }

        function DescontoPorcentagemParaValor(valorPorcentagem) {
            $("#DescontoValor").val(FixaDuasCasasDecimais(PorcentagemParaValor(valorPorcentagem)).replace(".", ","));
        }

        function PorcentagemParaValor(valorPorcentagem) {
            var valorParcela = parseFloat($("#ValorParcela").val().replace(",", "."));
            var porcentagem = parseFloat(valorPorcentagem.replace(",", "."));
            return (valorParcela * porcentagem) / 100;
        }

        function ValorParaPorcentagem(valorDinheiro) {
            var valorParcela = parseFloat($("#ValorParcela").val().replace(",", "."));
            var valor = parseFloat(valorDinheiro);
            return (valor * 100) / valorParcela;
        }
