                            <div class="col-md-6">
                                <label class="control-label">Desc (%)</label>
                                <input class="form-control" id="DescontoPorcentual" onblur="DescontoPorcentagemParaValor(this.value)" style="text-align:right" />
                                <span class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label class="control-label">Desc (R$)</label>
                                <input class="form-control" id="DescontoValor" onblur="AtualizarValorReajustadoEAberto()" style="text-align:right" />
                                <span class="text-danger"></span>
                            </div>
