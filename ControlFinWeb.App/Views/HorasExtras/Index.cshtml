@model IEnumerable<ControlFinWeb.App.ViewModels.HoraExtraVM>

@{
    ViewData["Title"] = "Hora Extra";
}


<div class="row">
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <button class="btn btn-dark novo" data-id="0"><i class="badge-info bi-plus-lg"></i></button>
        </div>
        <span class="input-group-text fw-bold">Lista Hora Extras</span>
    </div>
</div>
<table id="tabela" class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Data</th>
            <th>I.Manhã</th>
            <th>F.Manhã</th>
            <th>T.Manhã</th>
            <th>I.Tarde</th>
            <th>F.Tarde</th>
            <th>T.Tarde</th>
            <th>I.Noite</th>
            <th>F.Noite</th>
            <th>T.Noite</th>
            <th>T.Dia</th>
            <th>Extra</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.Raw(item.Data.Value.Date.ToShortDateString())
            </td>
            <td>
                @Html.Raw(item.HoraInicioManha.ToString("hh\\:mm"))
            </td>
            <td>
                @Html.Raw(item.HoraFinalManha.ToString("hh\\:mm"))
            </td>
            <td class="fw-bold">
                @Html.Raw(item.TotalManha.ToString("hh\\:mm"))
            </td>
            <td>
                @Html.Raw(item.HoraInicioTarde.ToString("hh\\:mm"))
            </td>
            <td>
                @Html.Raw(item.HoraFinalTarde.ToString("hh\\:mm"))
            </td>
            <td class="fw-bold">
                @Html.Raw(item.TotalTarde.ToString("hh\\:mm"))
            </td>
            <td>
                @Html.Raw(item.HoraInicioNoite.ToString("hh\\:mm"))
            </td>
            <td>
                @Html.Raw(item.HoraFinalNoite.ToString("hh\\:mm"))
            <td class="fw-bold">
                @Html.Raw(item.TotalNoite.ToString("hh\\:mm"))
            </td>
            <th class="fw-bold">
                @Html.Raw(item.HoraFinalDia.ToString("hh\\:mm"))
            </th>
            <th class="fw-bold">
                @Html.Raw(item.HorasExtras)
            </th>
            <td align="center">
                <button class="btn btn-primary modal-trigger editar" data-id="@item.Id"><i class="bi bi-pencil-square"></i></button>
                <a class="btn btn-danger modal-trigger" onclick="ExibirModalExcluir(@item.Id)"><i class="bi bi-x-square"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>


<div id="modal" class="modal fade" role="dialog" data-bs-backdrop="static" data-bs-keyboard="false"></div>

<!--Modal Excluir-->
<div class="modal fade modal-excluir" id="modal-excluir" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title text-white">Confirma exclusão do registro?</h5>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-outline-danger btnConfirmar">Confirmar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#tabela').DataTable({
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.11.5/i18n/pt-BR.json"
                }
            });
        });

        $(document).ready(function () {
            $(".modal-excluir").modal();
        });

        function ExibirModalExcluir(id) {
            $("#modal-excluir").modal("show");
            $(".btnConfirmar").on("click", function () {
                $.ajax({
                    method: "POST",
                    url: "/HorasExtras/Deletar",
                    data: { id: id },
                    success: function () {
                        location.reload();
                    },
                    error: function () {
                        $("#modal-excluir").modal("hide");
                    }
                });
            })
        }

        $(function () {
            $(".novo").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("Editar?id=" + id, function () {
                    $(".modal-title").html("NOVO REGISTRO");
                    $("#modal").modal("show");
                })

            });

            $(".editar").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load("Editar?id=" + id, function () {
                    $(".modal-title").html("ALTERANDO REGISTRO");
                    $("#modal").modal("show");
                })
            });
        })
    </script>
}
