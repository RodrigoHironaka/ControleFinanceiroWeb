@model ControlFinWeb.App.ViewModels.Acesso.LoginVM

@{
    ViewData["Title"] = "Entrar";
}

<body>
    <div class="container">
        <div class="row">
            <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
                <div class="card-body p-4 p-sm-5">
                    <div class="col mx-auto text-center">
                        <img class="img-fluid" src="~/img/Logo.png"  width="100" height="100"/>
                    </div>
                        

                        <form asp-action="Entrar" method="post">
                            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                            <input asp-for="ReturnUrl" type="hidden" />
                            @if (ViewData["Mensagem"] != null)
                            {
                                <div class="form-group">
                                    @Html.Raw(ViewData["Mensagem"])
                                </div>
                            }
                            <div class="form-floating mb-3">
                                <input asp-for="Email" type="email" class="form-control" id="floatingInput" placeholder="exemplo@exemplo.com">
                                <label asp-validation-for="Email" for="floatingInput">E-mail</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input asp-for="Senha" type="password" class="form-control" id="floatingPassword" placeholder="Senha">
                                <label asp-validation-for="Senha" for="floatingPassword">Senha</label>
                            </div>
                            <div class="d-grid">
                                <input type="submit" value="Entrar" class="btn btn-secondary btn-login text-uppercase fw-bold" />
                            </div>
                            <div class="d-grid mb-2">
                                <a asp-action="#" asp-controller="Login">Não é registrado?</a>
                            </div>
                        </form>
                    </div>
                </div>
        </div>
    </div>
</body>
