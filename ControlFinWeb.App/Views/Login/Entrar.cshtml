@model ControlFinWeb.App.ViewModels.Acesso.LoginVM

@{
    ViewData["Title"] = "Entrar";
}

<div class="formulario">
    <h2>@ViewData["Title"]</h2>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Entrar" method="post">
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <input asp-for="ReturnUrl" type="hidden" />
                @if (ViewData["Mensagem"] != null)
                {
                    <div class="form-group">
                        @Html.Raw(ViewData["Mensagem"])
                    </div>
                }

                <div class="row">
                    <div class="col-md-12">
                        <input asp-for="Email" class="form-control" placeholder="E-mail" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <input asp-for="Senha" class="form-control" placeholder="Senha" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Entrar" class="btn btn-primary"/>
                    <a asp-action="#" asp-controller="Login">Não é registrado?</a>
                </div>
                
            </form>
        </div>
    </div>
</div>

